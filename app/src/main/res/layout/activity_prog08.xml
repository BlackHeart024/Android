<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".prog08">

    <TextView
        android:id="@+id/textView12"
        android:layout_width="325dp"
        android:layout_height="60dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="45dp"
        android:gravity="center"
        android:text="Program 8"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/item"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="43dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="26dp"
        android:ems="10"
        android:hint="Enter List Items"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/searchView"
        app:layout_constraintEnd_toStartOf="@+id/additem"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/additem"
        android:layout_width="95dp"
        android:layout_height="50dp"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="26dp"
        android:text="Add"
        app:layout_constraintBottom_toTopOf="@+id/searchView"
        app:layout_constraintEnd_toEndOf="parent" />

    <SearchView
        android:id="@+id/searchView"
        android:layout_width="210dp"
        android:layout_height="50dp"
        android:layout_marginStart="44dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="21dp"
        app:layout_constraintBottom_toTopOf="@+id/listar"
        app:layout_constraintEnd_toStartOf="@+id/searchitem"
        app:layout_constraintStart_toStartOf="parent" />

    <ListView
        android:id="@+id/listar"
        android:layout_width="325dp"
        android:layout_height="300dp"
        android:layout_marginStart="43dp"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="22dp"
        app:layout_constraintBottom_toTopOf="@+id/delitem"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/delitem"
        android:layout_width="95dp"
        android:layout_height="50dp"
        android:layout_marginStart="158dp"
        android:layout_marginEnd="158dp"
        android:layout_marginBottom="57dp"
        android:text="Delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/searchitem"
        android:layout_width="95dp"
        android:layout_height="50dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="21dp"
        android:text="Search"
        app:layout_constraintBottom_toTopOf="@+id/listar"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>