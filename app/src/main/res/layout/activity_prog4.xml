<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".prog4">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="325dp"
        android:layout_height="60dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="130dp"
        android:gravity="center"
        android:text="Program 4"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/c1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/c1"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="81dp"
        android:layout_marginBottom="35dp"
        android:ems="10"
        android:hint="Enter First Value"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/c2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/c2"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="81dp"
        android:layout_marginBottom="63dp"
        android:ems="10"
        android:hint="Enter Second Value"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/rup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/rup"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="44dp"
        android:text="Rupee"
        app:layout_constraintBottom_toTopOf="@+id/cel"
        app:layout_constraintEnd_toStartOf="@+id/dol"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/dol"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="83dp"
        android:layout_marginBottom="44dp"
        android:text="Dollar"
        app:layout_constraintBottom_toTopOf="@+id/far"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/cel"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="133dp"
        android:text="Celcius"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/far"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/far"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="83dp"
        android:layout_marginBottom="133dp"
        android:text="Faren"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>